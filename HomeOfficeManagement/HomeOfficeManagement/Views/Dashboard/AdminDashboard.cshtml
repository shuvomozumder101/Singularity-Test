@model IEnumerable<ApplicationUser>
@{ ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout"; }


@section PageStyles
{
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="/admin/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="/admin/plugins/daterangepicker/daterangepicker.css">
    <!-- summernote -->
    <link rel="stylesheet" href="/admin/plugins/summernote/summernote-bs4.css">
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Dashboard</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.user</h3>

                        <p>Total User</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>0</h3>

                        <p>Admin</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.blockuser</h3>

                        <p>Block User</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-6">
                <!-- small box -->
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.present</h3>

                        <p>Present Today</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <br />
        <br />
        <h3 class="text-center">USER List</h3>

        @*<p>
                <a  class="btn btn-warning" asp-action="Create">Create New</a>
            </p>*@
        <table class="table table-hover  shadow-sm">
            <thead class="thead-dark">
                <tr @*class="row"*@>

                    <th @*class="col-md-2 col-sm-4"*@>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Subject)
                        </th>*@
                    <th @*class="col-md-3 col-sm-4"*@>
                        @*@Html.DisplayNameFor(model => model.Body)*@
                        Message
                    </th>



                    <th @*class="col-md-1 col-sm-4"*@>
                        @Html.DisplayNameFor(model => model.BlockStutas)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr @*class="row"*@>


        @*<td>
                @Html.DisplayFor(modelItem => item.From)
            </td>*@
        @*<td>
                @Html.DisplayFor(modelItem => item.To)
            </td>*@
        <td @*class="col-md-2 col-sm-4"*@>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        @*<td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>*@
        <td @*class="col-md-3 col-sm-4"*@>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        @{ if (item.BlockStutas == true)
            {

<td class="text-danger" @*class="col-md-1 col-sm-4"*@>
    @Html.DisplayFor(modelItem => item.BlockStutas)

</td>
 }
else
{

<td class="text-success" @*class="col-md-1 col-sm-4"*@>
    @Html.DisplayFor(modelItem => item.BlockStutas)

</td>
 } }@*<td class="col-md-3 col-sm-4">
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>*@

</tr>
}
            </tbody>
        </table>

        <!-- /.row (main row) -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

@section Scripts
{
    <!-- ChartJS -->
    <script src="/admin/plugins/chart.js/Chart.min.js"></script>
    <!-- Sparkline -->
    <script src="/admin/plugins/sparklines/sparkline.js"></script>
    <!-- JQVMap -->
    <script src="/admin/plugins/jqvmap/jquery.vmap.min.js"></script>
    <script src="/admin/plugins/jqvmap/maps/jquery.vmap.usa.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="/admin/plugins/jquery-knob/jquery.knob.min.js"></script>
    <!-- daterangepicker -->
    <script src="/admin/plugins/moment/moment.min.js"></script>
    <script src="/admin/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="/admin/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="/admin/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="/admin/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
}